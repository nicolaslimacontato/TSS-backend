@model IEnumerable<TSS.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}

<h1>Usuários</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Usuario</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Email
            </th>
            <th>
                Senha
            </th>
            <th>
                Data de Nascimento
            </th>
            <th>
                CPF/CNPJ
            </th>
            <th>
                Telefone
            </th>
            <th>
                Tipo de Usuário
            </th>
            <th>
                Plano
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Senha)
                </td>
                <td>
                    @Html.Raw(item.Dtnasc.ToString("dd/MM/yyyy"))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CPF_CNPJ)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipousuario.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Plano.Descricao)
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .btn-group .btn {
        margin-right: 5px; /* Ajuste o valor conforme necessário */
    }

        .btn-group .btn:last-child {
            margin-right: 0;
        }
</style>
