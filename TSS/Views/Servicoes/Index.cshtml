@model IEnumerable<TSS.Models.Servico>
@{
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3>Serviços do Cliente</h3>
                </div>
                <div class="card-body">
                    <p>
                        <a class="btn btn-primary" asp-action="Create">Criar Novo Serviço</a>
                    </p>
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>Data de Início</th>
                                <th>Data de Fim</th>
                                <th>Descrição</th>
                                <th>Usuário</th>
                                <th>Tipo de Serviço</th>
                                <th>Status</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Dtini.ToString("yyyy-MM-dd")</td>
                                    <td>@item.Dtfim?.ToString("yyyy-MM-dd")</td>
                                    <td>@item.Descricao</td>
                                    <td>@item.Usuario?.Nome</td>
                                    <td>@item.Tiposervico?.Nome</td>
                                    <td>@item.Status?.Nome</td>
                                    <td>
                                        <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                                        <a class="btn btn-sm btn-success" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
